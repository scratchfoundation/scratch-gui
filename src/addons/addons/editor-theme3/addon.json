      "type": "color",
      "default": "#9966FF",
      "reloadRequired": false
    },
    {
      "name": "sounds",
      "id": "sounds-color",
      "type": "color",
      "default": "#CF63CF",
      "reloadRequired": false
    },
    {
      "name": "events",
      "id": "events-color",
      "type": "color",
      "default": "#FFBF00",
      "reloadRequired": false
